{erl_opts, [debug_info, {i, "./_build/default/plugins/gpb/include"}]}.

{deps, [
  {jsx, "2.8.2"}
]}.

{clean_files, ["*~", "**/*~", "**/*.beam"]}.

{plugins, [{rebar3_gpb_plugin, "1.11.2"}]}.

{gpb_opts, [
  {i, "proto"},
  {o_erl, "src"},
  {o_hrl, "include"},
  {module_name_suffix, "_pb"},
  {strings_as_binaries, true},
  {defaults_for_omitted_optionals, true},
  {type_defaults_for_omitted_optionals, true},
  type_specs
]}.

{provider_hooks, [
  {pre, [
    {compile, {protobuf, compile}},
    {clean, {protobuf, clean}}
  ]}
]}.

{eunit_opts, [
  verbose,
  {report, {
    eunit_surefire, [{dir,"."}]
  }}
]}.

{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
